{
  "packages": [
    "projects/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "**/node_modules/**",
        "*.spec.*",
        "*.test.*",
        ".gitrepo"
      ],
      "bump": "patch",
      "conventionalCommits": true,
      "conventionalGraduate": true
    },
    "run": {
      "stream": true
    },
    "exec": {
      "stream": true
    }
  },
  "npmClient": "npm",
  "useWorkspaces": false,
  "version": "independent"
}